---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About Me";
const identity = {
  firstName: "Johan",
  country: "Colombia",
  occupation: "Software Developer",
  hobbies: ["Rugby", "Playing Video Games", "Watching Movies"],
};
const skills = ["HTML", "CSS", "JavaScript", "React", "Node.js", "MongoDB", "Angular", "Vue.js", "Wordpress", "Astro", "Java", ".Net", "python", "GraphQL", "REST API", "SQL"];

const happy = true;
const goal = 3;
---
<BaseLayout pageTitle={pageTitle}>
  <h1>{pageTitle}</h1>
  <h2>... and my new Portolio in Astro!</h2>
  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
    {identity.hobbies.length >= 2 &&
      <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning Astro!</p>}
  {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
</BaseLayout>

